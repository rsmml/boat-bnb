<div class="container text-center">
  <h1>Sail away with one of the boats</h1>
</div>
<div id="content-index" class="ml-3 pl-3 mr-3 pr-3">
  <div class="grid-boats">
    <% @boats.each do |boat| %>
      <div>
        <%= cl_image_tag boat.photo.key, height: 300, width: 300, crop: :fill %>
        <h2><%= link_to boat.name, boat_path(boat) %></h2>
      </div>
    <% end %>
  </div>
  <div id="map-index" class="mt-3"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key='<%= ENV['MAPBOX_API_KEY'] %>'></div>
    </div>
</div>
