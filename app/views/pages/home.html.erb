<div class="home-page-background">
  <%= image_tag "homepage-01" %>
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-8">
        <%= form_tag boats_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Where do you want to sail?" %>
      </div>
    <div class="col-md-4">
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>





