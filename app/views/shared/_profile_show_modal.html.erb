<div id="profile-show-modal" class="profile-show-modal">
  <h4>Welcome on board <strong><%= @user.name.split.first %></strong>!</h4>
  <div class="profile-cover-picture">
    <%#= image_tag "profile-cover-picture", alt: "profile-cover" %>
  </div>
  <div class="profile-avatar" style="margin-right: 24px;position: relative;bottom: 45px;left: 45px;">
    <div class="profile-user-picture">
      <div id="profile-avatar"> <%= cl_image_tag @user.photo.key, width: 120, height: 120, crop: :fill %> </div>
      <div class="d-flex">
        <p style="font-size: 14px;"><%= link_to "Change", edit_user_registration_path %></p>
      </div>
    </div>
    <div class="profile-user-info" style="display: flex;flex-direction: column;justify-content: end;margin-bottom: 2%;margin-left: 2%;">
      <strong><h4><%= @user.name %></h4></strong>
      <div class="d-flex">
        <p style="margin-right: 24px"><%= @user.bio %></p>
        <p><i class="fas fa-map-marker-alt" style="color: #ff5f40; margin-right: 8px;"></i>Berlin, DE</p>
      </div>
    </div>
  </div>
  <div class="user-info">
    <div class="d-flex justify-content-between mx-5 py-1">
      <div class="d-flex grow-1">
        <div style="width: 150px;">
          <strong><p style="margin-right: 24px">Name</p></strong>
        </div>
        <div>
          <p><%= @user.name %></p>
        </div>
      </div>
      <p><%= link_to "Edit", edit_user_registration_path %></p>
    </div>
    <hr style="width: 90%">
    <div class="d-flex justify-content-between mx-5 py-1">
      <div class="d-flex grow-1">
        <div style="width: 150px;">
          <strong><p style="margin-right: 24px">Bio</p></strong>
        </div>
        <div>
          <p><%= @user.bio %></p>
        </div>
      </div>
      <p><%= link_to "Edit", edit_user_registration_path %></p>
    </div>
    <hr style="width: 90%">
    <div class="d-flex justify-content-between mx-5 py-1">
      <div class="d-flex grow-1">
        <div style="width: 150px;">
          <strong><p style="margin-right: 24px">E-mail</p></strong>
        </div>
        <div>
          <p><%= @user.email %></p>
        </div>
      </div>
      <p><%= link_to "Edit", edit_user_registration_path %></p>
    </div>
    <hr style="width: 90%">
    <div class="d-flex justify-content-between mx-5 py-1">
      <div class="d-flex grow-1">
        <div style="width: 150px;">
          <strong><p style="margin-right: 24px">City</p></strong>
        </div>
        <div>
          <p>Berlin, DE</p>
        </div>
      </div>
      <p><%= link_to "Edit", edit_user_registration_path %></p>
    </div>
    <hr style="width: 90%">
    <div class="d-flex justify-content-between mx-5 py-1">
      <div class="d-flex grow-1">
        <div style="width: 150px;">
          <strong><p style="margin-right: 24px">Password</p></strong>
        </div>
        <div>
          <p>* * * * * * * * * * </p>
        </div>
      </div>
      <p><%= link_to "Edit", edit_user_registration_path %></p>
    </div>
    <hr style="width: 90%">
    <div class="d-flex justify-content-between mx-5 py-1">
      <div class="d-flex grow-1">
        <div style="width: 150px;">
          <strong><p style="margin-right: 24px">Subscription Type</p></strong>
        </div>
        <div>
          <p><i class="fas fa-award" style="margin-right: 12px; color: gold"></i>Pro User</p>
        </div>
      </div>
      <p><%= link_to "Edit", edit_user_registration_path %></p>
    </div>
    <hr style="width: 90%">
    <div class="d-flex justify-content-between mx-5 py-1">
      <div class="d-flex grow-1">
        <div style="width: 150px;">
          <strong><p style="margin-right: 24px">Language</p></strong>
        </div>
        <div>
          <p>English</p>
        </div>
      </div>
      <p><%= link_to "Edit", edit_user_registration_path %></p>
    </div>
    <hr style="width: 90%">
  </div>
</div>
